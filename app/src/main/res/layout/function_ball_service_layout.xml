<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">
    <!--android:background="#b2000000"-->

    <FrameLayout
            android:id="@+id/fl_ball_function"
            android:layout_width="@dimen/ball_width"
            android:layout_height="@dimen/ball_height"
            android:layout_alignParentLeft="true">
        <ImageView
                android:id="@+id/iv_ball_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_ball_red"/>
        <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus"/>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/fl_bar_function"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ball_height"
            android:layout_toRightOf="@+id/fl_ball_function">

        <RelativeLayout
                android:id="@+id/rl_bar_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">
            <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/ball_width"
                    android:layout_height="@dimen/ball_height"
                    android:scaleType="centerInside"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/ball_split_margin"
                    android:src="@drawable/ic_search_red"
                    android:visibility="gone"/>

            <ImageView
                    android:id="@+id/iv_recommend"
                    android:layout_width="@dimen/ball_width"
                    android:layout_height="@dimen/ball_height"
                    android:scaleType="centerInside"
                    android:layout_toRightOf="@+id/iv_search"
                    android:layout_marginLeft="@dimen/ball_split_margin"
                    android:src="@drawable/ic_recommend_red"
                    android:visibility="gone"/>

            <ImageView
                    android:id="@+id/iv_grcode"
                    android:layout_width="@dimen/ball_width"
                    android:layout_height="@dimen/ball_height"
                    android:scaleType="centerInside"
                    android:layout_toRightOf="@+id/iv_recommend"
                    android:layout_marginLeft="@dimen/ball_split_margin"
                    android:src="@drawable/ic_qrcode_red"
                    android:visibility="gone"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>